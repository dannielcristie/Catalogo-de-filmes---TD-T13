<%= form_with model: director do |f|%>

  <%= f.label 'Nome' %>
  <%= f.text_field :name %>

  <%= f.label 'Nacionalidade' %>
  <%= f.text_field :nationality %>

  <%= f.label 'Data de nascimento' %>
  <%= f.date_field :birth_date %>
  
  <%= f.label 'Genero favoritos' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>


  <%= f.submit 'Salvar' %>

<%end%>