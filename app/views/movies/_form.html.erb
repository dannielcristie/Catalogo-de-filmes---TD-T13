<%= form_with model: movie do |f|%>

  <%= f.label 'Titulo' %>
  <%= f.text_field :title %>

  <%= f.label 'Ano de lançamento' %>
  <%= f.number_field :release_year %>

  <%= f.label 'Sinopse' %>
  <%= f.text_area :synopsis %>

  <%= f.label 'Pais de Origem' %>
  <%= f.text_field :country_of_origin %>

  <%= f.label 'Duração(minutos) ' %>
  <%= f.number_field :duration %>

  <%= f.label 'Diretor do filme' %>
  <%= f.collection_select :director_id, Director.all, :id, :name %>
  
  <%= f.label 'Genero do filme' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>

  <%= f.submit 'Salvar' %>

<%end%>